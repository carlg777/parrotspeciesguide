---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SEO from "../components/SEO.astro";
import { getLangFromUrl } from "../i18n/utils";

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  ogTitle?: string;
  ogDescription?: string;
  ogImage?: string;
  ogType?: string;
  twitterCard?: string;
  dataPage?: string;
}

const {
  title,
  description,
  canonical,
  ogTitle,
  ogDescription,
  ogImage,
  ogType,
  twitterCard,
  dataPage = "static"
} = Astro.props as Props;

const currentLang = getLangFromUrl(Astro.url);
---

<!DOCTYPE html>
<html lang={currentLang} translate="no">
  <head>
    <SEO
      title={title}
      description={description}
      canonical={canonical}
      ogTitle={ogTitle}
      ogDescription={ogDescription}
      ogImage={ogImage}
      ogType={ogType}
      twitterCard={twitterCard}
    />
    
    <link rel="preload" href="/assets/css/styles.css" as="style" />
    <link rel="stylesheet" href="/assets/css/styles.css" />
    <slot name="head" />
  </head>
  <body data-page={dataPage}>
    <Header />
    <slot />
    <Footer year={new Date().getFullYear()} />
    <slot name="scripts" />

    <script is:inline>
      // Mobile Menu - defined at end of body to ensure DOM is ready
      window.toggleMobileMenu = function() {
        alert('toggleMobileMenu called!');
        var hamburger = document.querySelector('.hamburger');
        var nav = document.getElementById('mobile-nav');

        if (!hamburger || !nav) {
          alert('Elements not found: hamburger=' + !!hamburger + ', nav=' + !!nav);
          return;
        }

        hamburger.classList.toggle('is-active');
        var isOpen = hamburger.classList.contains('is-active');

        if (isOpen) {
          nav.style.cssText = 'display:flex!important;flex-direction:column!important;position:fixed!important;top:0!important;left:0!important;right:0!important;bottom:0!important;width:100vw!important;height:100vh!important;background:red!important;z-index:999999!important;padding:80px 20px!important;';
        } else {
          nav.style.cssText = '';
        }
      };
    </script>
  </body>
</html>
