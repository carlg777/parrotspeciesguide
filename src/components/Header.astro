---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<header class="site-header">
  <div class="site-header__inner container">
    <a href="/" class="brand">
      <div class="brand__logo">P</div>
      <span>Parrot Species Guide</span>
    </a>

    <button class="hamburger" aria-label="Menu" aria-expanded="false">
      <div class="hamburger__line"></div>
      <div class="hamburger__line"></div>
      <div class="hamburger__line"></div>
    </button>
  </div>

  <nav class="main-nav">
    <div class="container mobile-nav-inner">
      <a href="/species" class={Astro.url.pathname.startsWith('/species') ? 'is-active' : ''}>
        {t('nav.species')}
      </a>
      <a href="/browse" class={Astro.url.pathname.startsWith('/browse') ? 'is-active' : ''}>
        Browse
      </a>
      {currentLang === 'en' ? (
        <a href={`/es${Astro.url.pathname === '/' ? '' : Astro.url.pathname}`} hreflang="es" class="user-pill">Espa√±ol</a>
      ) : (
        <a href={Astro.url.pathname.replace(/^\/es/, '') || '/'} hreflang="en" class="user-pill">English</a>
      )}
    </div>
  </nav>
</header>

<script>
  // Mobile Menu Logic
  const hamburger = document.querySelector('.hamburger');
  const nav = document.querySelector('.main-nav');

  if (hamburger && nav) {
    hamburger.addEventListener('click', () => {
      const isExpanded = hamburger.getAttribute('aria-expanded') === 'true';
      hamburger.setAttribute('aria-expanded', String(!isExpanded));
      hamburger.classList.toggle('is-active');
      nav.classList.toggle('is-active');
    });
  }
</script>

<style>
  /* Header Base Styles */
  .site-header {
    background: white;
    border-bottom: 1px solid var(--pf-neutral-200);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .site-header__inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 4rem;
  }

  /* Brand / Logo */
  .brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--pf-primary-600);
    font-weight: 700;
    font-size: 1.1rem;
    font-family: var(--pf-font-display);
  }

  .brand__logo {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--pf-primary-500), var(--pf-secondary-500));
    color: white;
    display: grid;
    place-items: center;
    font-size: 0.9rem;
  }

  /* Navigation Links */
  .main-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  /* Desktop: reposition nav to align with header logic if needed */
  @media (min-width: 769px) {
    .site-header__inner {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 2rem;
    }
    .main-nav {
      justify-self: end;
      display: flex;
    }
    
    /* Hide hamburger */
    .mobile-nav-inner {
        display: contents; /* Strip container behavior on desktop */
    }
  }

  .main-nav a {
    text-decoration: none;
    color: var(--pf-neutral-700);
    font-weight: 500;
    transition: color 0.2s;
  }

  .main-nav a:hover,
  .main-nav a.is-active {
    color: var(--pf-primary-600);
  }

  .user-pill {
    padding: 0.4rem 0.8rem;
    background: var(--pf-neutral-050);
    border-radius: var(--pf-radius-pill);
    font-size: 0.9rem;
    color: var(--pf-primary-600) !important;
  }

  /* Hamburger Menu (Hidden on Desktop) */
  .hamburger {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .hamburger__line {
    width: 24px;
    height: 2px;
    background: var(--pf-neutral-700);
    transition: all 0.3s ease;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .hamburger {
      display: flex;
      z-index: 100000; /* Must be > main-nav (99999) */
      position: relative; /* Ensure z-index applies */
    }

    .main-nav {
      /* Base positioning */
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100dvh;
      
      /* Layout & Styling */
      flex-direction: column;
      background-color: #ffffff;
      padding: 6rem 1.5rem 2rem;
      padding-top: calc(4rem + 2rem);
      padding-bottom: env(safe-area-inset-bottom, 20px);
      gap: 1.5rem;
      align-items: flex-start;
      overflow-y: auto;
      z-index: 99999;
      
      /* Visibility Logic: Default Hidden */
      display: none; 
      opacity: 1; /* Reset opacity logic */
      visibility: visible;
      transform: none;
      pointer-events: auto;
    }

    .main-nav.is-active {
      display: flex; /* Show when active */
    }

    .main-nav a {
      font-size: 1.25rem;
      width: 100%;
      padding: 0.75rem 0;
      border-bottom: 1px solid var(--pf-neutral-100);
      color: #1f2937; /* Force dark color */
      display: block;
    }

    .user-pill {
      margin-top: 1rem;
      width: auto !important;
      display: inline-block;
    }

    /* Hibernate Hamburger Animation */
    .hamburger.is-active .hamburger__line:nth-child(1) {
      transform: translateY(7px) rotate(45deg);
    }
    .hamburger.is-active .hamburger__line:nth-child(2) {
      opacity: 0;
    }
    .hamburger.is-active .hamburger__line:nth-child(3) {
      transform: translateY(-7px) rotate(-45deg);
    }
  }
</style>
