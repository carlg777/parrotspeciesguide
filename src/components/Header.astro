---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<div class="header-wrapper">
  <header class="site-header">
    <div class="site-header__inner container">
      <a href="/" class="brand">
        <div class="brand__logo">P</div>
        <span>Parrot Species Guide</span>
      </a>

      <button class="hamburger" aria-label="Menu" aria-expanded="false" onclick="toggleMobileMenu()">
        <div class="hamburger__line"></div>
        <div class="hamburger__line"></div>
        <div class="hamburger__line"></div>
      </button>

      <nav class="main-nav" id="mobile-nav">
        <a href="/species" class={Astro.url.pathname.startsWith('/species') ? 'is-active' : ''}>
          {t('nav.species')}
        </a>
        <a href="/browse" class={Astro.url.pathname.startsWith('/browse') ? 'is-active' : ''}>
          Browse
        </a>
        {currentLang === 'en' ? (
          <a href={`/es${Astro.url.pathname === '/' ? '' : Astro.url.pathname}`} hreflang="es" class="user-pill">Espa√±ol</a>
        ) : (
          <a href={Astro.url.pathname.replace(/^\/es/, '') || '/'} hreflang="en" class="user-pill">English</a>
        )}
      </nav>
    </div>
  </header>
</div>

<script is:inline>
  // Global function for inline onclick
  function toggleMobileMenu() {
    var hamburger = document.querySelector('.hamburger');
    var nav = document.getElementById('mobile-nav');

    if (!hamburger || !nav) {
      alert('Menu elements not found!');
      return;
    }

    hamburger.classList.toggle('is-active');
    var isOpen = hamburger.classList.contains('is-active');
    hamburger.setAttribute('aria-expanded', isOpen);

    // Force ALL styles inline to guarantee visibility
    if (isOpen) {
      nav.setAttribute('style',
        'display: flex !important;' +
        'flex-direction: column !important;' +
        'position: fixed !important;' +
        'top: 0 !important;' +
        'left: 0 !important;' +
        'right: 0 !important;' +
        'bottom: 0 !important;' +
        'width: 100vw !important;' +
        'height: 100vh !important;' +
        'background-color: white !important;' +
        'z-index: 999999 !important;' +
        'padding: 80px 20px 20px 20px !important;' +
        'overflow-y: auto !important;' +
        'visibility: visible !important;' +
        'opacity: 1 !important;' +
        'transform: none !important;' +
        'pointer-events: auto !important;'
      );
    } else {
      nav.setAttribute('style', '');
    }
  }
</script>

<style>
  /* Header Base Styles */
  .site-header {
    background: white;
    border-bottom: 1px solid var(--pf-neutral-200);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .site-header__inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 4rem;
  }

  /* Brand / Logo */
  .brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--pf-primary-600);
    font-weight: 700;
    font-size: 1.1rem;
    font-family: var(--pf-font-display);
  }

  .brand__logo {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--pf-primary-500), var(--pf-secondary-500));
    color: white;
    display: grid;
    place-items: center;
    font-size: 0.9rem;
  }

  /* Navigation Links */
  .main-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  /* Desktop: reposition nav to align with header logic if needed */
  @media (min-width: 769px) {
    .site-header__inner {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 2rem;
    }
    .main-nav {
      justify-self: end;
      display: flex;
    }
    
    /* Hide hamburger */
    .mobile-nav-inner {
        display: contents; /* Strip container behavior on desktop */
    }
  }

  .main-nav a {
    text-decoration: none;
    color: var(--pf-neutral-700);
    font-weight: 500;
    transition: color 0.2s;
  }

  .main-nav a:hover,
  .main-nav a.is-active {
    color: var(--pf-primary-600);
  }

  .user-pill {
    padding: 0.4rem 0.8rem;
    background: var(--pf-neutral-050);
    border-radius: var(--pf-radius-pill);
    font-size: 0.9rem;
    color: var(--pf-primary-600) !important;
  }

  /* Hamburger Menu (Hidden on Desktop) */
  .hamburger {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .hamburger__line {
    width: 24px;
    height: 2px;
    background: var(--pf-neutral-700);
    transition: all 0.3s ease;
  }

  /* Mobile Styles - hamburger animation only, layout in global CSS */
  @media (max-width: 900px) {
    .hamburger.is-active .hamburger__line:nth-child(1) {
      transform: translateY(7px) rotate(45deg);
    }
    .hamburger.is-active .hamburger__line:nth-child(2) {
      opacity: 0;
    }
    .hamburger.is-active .hamburger__line:nth-child(3) {
      transform: translateY(-7px) rotate(-45deg);
    }
  }
</style>
