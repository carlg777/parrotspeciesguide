---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<header class="site-header">
  <div class="site-header__inner container">
    <a href="/" class="brand">
      <div class="brand__logo">P</div>
      <span>Parrot Species Guide</span>
    </a>

    <button class="hamburger" aria-label="Menu" aria-expanded="false">
      <div class="hamburger__line"></div>
      <div class="hamburger__line"></div>
      <div class="hamburger__line"></div>
    </button>
  </div>

  <nav class="main-nav">
    <div class="container mobile-nav-inner">
      <a href="/species" class={Astro.url.pathname.startsWith('/species') ? 'is-active' : ''}>
        {t('nav.species')}
      </a>
      <a href="/browse" class={Astro.url.pathname.startsWith('/browse') ? 'is-active' : ''}>
        Browse
      </a>
      {currentLang === 'en' ? (
        <a href={`/es${Astro.url.pathname === '/' ? '' : Astro.url.pathname}`} hreflang="es" class="user-pill">Espa√±ol</a>
      ) : (
        <a href={Astro.url.pathname.replace(/^\/es/, '') || '/'} hreflang="en" class="user-pill">English</a>
      )}
    </div>
  </nav>
</header>

<script>
  // Mobile Menu Logic
  const hamburger = document.querySelector('.hamburger');
  const nav = document.querySelector('.main-nav');

  if (hamburger && nav) {
    hamburger.addEventListener('click', () => {
      const isExpanded = hamburger.getAttribute('aria-expanded') === 'true';
      hamburger.setAttribute('aria-expanded', String(!isExpanded));
      hamburger.classList.toggle('is-active');
      nav.classList.toggle('is-active');
    });
  }
</script>

<style>
  /* Header Base Styles */
  .site-header {
    background: white;
    border-bottom: 1px solid var(--pf-neutral-200);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .site-header__inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 4rem;
  }

  /* Brand / Logo */
  .brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--pf-primary-600);
    font-weight: 700;
    font-size: 1.1rem;
    font-family: var(--pf-font-display);
  }

  .brand__logo {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--pf-primary-500), var(--pf-secondary-500));
    color: white;
    display: grid;
    place-items: center;
    font-size: 0.9rem;
  }

  /* Navigation Links */
  .main-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  /* Desktop: reposition nav to align with header logic if needed */
  @media (min-width: 769px) {
    .site-header__inner {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 2rem;
    }
    .main-nav {
      justify-self: end;
      display: flex;
    }
    
    /* Hide hamburger */
    .mobile-nav-inner {
        display: contents; /* Strip container behavior on desktop */
    }
  }

  .main-nav a {
    text-decoration: none;
    color: var(--pf-neutral-700);
    font-weight: 500;
    transition: color 0.2s;
  }

  .main-nav a:hover,
  .main-nav a.is-active {
    color: var(--pf-primary-600);
  }

  .user-pill {
    padding: 0.4rem 0.8rem;
    background: var(--pf-neutral-050);
    border-radius: var(--pf-radius-pill);
    font-size: 0.9rem;
    color: var(--pf-primary-600) !important;
  }

  /* Hamburger Menu (Hidden on Desktop) */
  .hamburger {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .hamburger__line {
    width: 24px;
    height: 2px;
    background: var(--pf-neutral-700);
    transition: all 0.3s ease;
  }

  /* Mobile Styles - must match global CSS breakpoint */
  @media (max-width: 900px) {
    .hamburger {
      display: flex !important;
      z-index: 1000;
      position: relative;
    }

    .main-nav {
      /* Dropdown positioning (not fixed - avoids backdrop-filter issues) */
      position: absolute !important;
      top: 100% !important;
      left: 0 !important;
      right: 0 !important;
      width: 100% !important;
      height: auto !important;

      /* Layout & Styling */
      flex-direction: column !important;
      background-color: #ffffff !important;
      padding: 0 !important;
      gap: 0 !important;
      align-items: stretch !important;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      border-top: 1px solid var(--pf-neutral-200);

      /* Visibility: Hidden by default */
      display: none !important;
    }

    .main-nav.is-active {
      display: flex !important;
    }

    .main-nav a {
      font-size: 1.1rem !important;
      width: 100% !important;
      padding: 1rem 1.5rem !important;
      border-bottom: 1px solid var(--pf-neutral-100) !important;
      color: #1f2937 !important;
      display: block !important;
      text-align: left !important;
    }

    .main-nav a:hover {
      background-color: var(--pf-neutral-050) !important;
    }

    .user-pill {
      margin: 0 !important;
      width: 100% !important;
      display: block !important;
      border-radius: 0 !important;
      text-align: left !important;
    }

    /* Inner container */
    .mobile-nav-inner {
      display: flex !important;
      flex-direction: column !important;
      width: 100% !important;
      padding: 0 !important;
    }

    /* Hamburger Animation */
    .hamburger.is-active .hamburger__line:nth-child(1) {
      transform: translateY(7px) rotate(45deg);
    }
    .hamburger.is-active .hamburger__line:nth-child(2) {
      opacity: 0;
    }
    .hamburger.is-active .hamburger__line:nth-child(3) {
      transform: translateY(-7px) rotate(-45deg);
    }
  }
</style>
