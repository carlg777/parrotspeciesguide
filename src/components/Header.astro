---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<header class="site-header">
  <div class="site-header__inner container">
    <a href="/" class="brand">
      <div class="brand__logo">P</div>
      <span>Parrot Species Guide</span>
    </a>

    <button class="hamburger" aria-label="Menu" aria-expanded="false">
      <div class="hamburger__line"></div>
      <div class="hamburger__line"></div>
      <div class="hamburger__line"></div>
    </button>

    <nav class="main-nav">
      <a href="/species" class={Astro.url.pathname.startsWith('/species') ? 'is-active' : ''}>
        {t('nav.species')}
      </a>
      <a href="/browse" class={Astro.url.pathname.startsWith('/browse') ? 'is-active' : ''}>
        Browse
      </a>
      {currentLang === 'en' ? (
        <a href={`/es${Astro.url.pathname === '/' ? '' : Astro.url.pathname}`} hreflang="es" class="user-pill">Espa√±ol</a>
      ) : (
        <a href={Astro.url.pathname.replace(/^\/es/, '') || '/'} hreflang="en" class="user-pill">English</a>
      )}
    </nav>
  </div>
</header>

<script>
  // Mobile Menu Logic
  const hamburger = document.querySelector('.hamburger');
  const nav = document.querySelector('.main-nav');

  if (hamburger && nav) {
    hamburger.addEventListener('click', () => {
      const isExpanded = hamburger.getAttribute('aria-expanded') === 'true';
      hamburger.setAttribute('aria-expanded', String(!isExpanded));
      hamburger.classList.toggle('is-active');
      nav.classList.toggle('is-active');
    });
  }
</script>

<style>
  /* Header Base Styles */
  .site-header {
    background: white;
    border-bottom: 1px solid var(--pf-neutral-200);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .site-header__inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 4rem;
  }

  /* Brand / Logo */
  .brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--pf-primary-600);
    font-weight: 700;
    font-size: 1.1rem;
    font-family: var(--pf-font-display);
  }

  .brand__logo {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--pf-primary-500), var(--pf-secondary-500));
    color: white;
    display: grid;
    place-items: center;
    font-size: 0.9rem;
  }

  /* Navigation Links */
  .main-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .main-nav a {
    text-decoration: none;
    color: var(--pf-neutral-700);
    font-weight: 500;
    transition: color 0.2s;
  }

  .main-nav a:hover,
  .main-nav a.is-active {
    color: var(--pf-primary-600);
  }

  .user-pill {
    padding: 0.4rem 0.8rem;
    background: var(--pf-neutral-050);
    border-radius: var(--pf-radius-pill);
    font-size: 0.9rem;
    color: var(--pf-primary-600) !important;
  }

  /* Hamburger Menu (Hidden on Desktop) */
  .hamburger {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .hamburger__line {
    width: 24px;
    height: 2px;
    background: var(--pf-neutral-700);
    transition: all 0.3s ease;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .hamburger {
      display: flex;
      z-index: 101; /* Ensure above everything */
    }

    .main-nav {
      position: fixed;
      inset: 0; /* Full screen overlay */
      width: 100vw;
      height: 100vh;
      height: 100dvh; /* Dynamic viewport height */
      flex-direction: column;
      background: white;
      padding: 6rem 1.5rem 2rem; /* Top padding clears the header */
      padding-top: calc(4rem + 2rem);
      padding-bottom: env(safe-area-inset-bottom, 20px);
      gap: 1.5rem;
      align-items: flex-start;
      overflow-y: auto;
      z-index: 40; /* Just below header (50) so hamburger stays clickable, OR higher if we want to cover everything */
      /* Actually, to avoid clicking issues, let's keep it below the header (z:50) but ensure it fills screen */
      /* Wait, if it's below header, top part is covered. That's good. */
      
      /* Hidden State */
      opacity: 0;
      visibility: hidden;
      transform: translateY(10px);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .main-nav.is-active {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    .main-nav a {
      font-size: 1.25rem; /* Larger touch targets */
      width: 100%;
      padding: 0.75rem 0;
      border-bottom: 1px solid var(--pf-neutral-100);
    }

    .user-pill {
      margin-top: 1rem;
      width: auto !important;
      display: inline-block;
    }

    /* Hibernate Hamburger Animation */
    .hamburger.is-active .hamburger__line:nth-child(1) {
      transform: translateY(7px) rotate(45deg);
    }
    .hamburger.is-active .hamburger__line:nth-child(2) {
      opacity: 0;
    }
    .hamburger.is-active .hamburger__line:nth-child(3) {
      transform: translateY(-7px) rotate(-45deg);
    }
  }
</style>
