---
import { Image } from 'astro:assets';
import { getImageImport } from '../../lib/imageImport';

interface Props {
  category: string;
  count: number;
  imagePath: string;
  href: string;
}

const { category, count, imagePath, href } = Astro.props;

// Dynamically resolve the image
const imageImport = await getImageImport(imagePath);
---

<a href={href} class="category-card-visual group">
  <div class="category-card-bg">
    <Image 
      src={imageImport.default} 
      alt={`${category} category`}
      width={400} 
      height={300}
      format="webp"
      class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-110"
    />
    <div class="category-card-overlay"></div>
  </div>
  <div class="category-card-content">
    <h3 class="category-card-title">{category}</h3>
    <span class="category-card-meta">{count} species</span>
  </div>
</a>

<style>
  .category-card-visual {
    position: relative;
    display: block;
    border-radius: 16px;
    overflow: hidden;
    aspect-ratio: 4/3;
    text-decoration: none;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .category-card-visual:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  .category-card-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  /* Overlay gradient for text readability */
  .category-card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.1) 100%);
    z-index: 1;
  }

  .category-card-content {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1rem;
  }

  .category-card-title {
    color: white;
    margin: 0;
    font-size: 1.1rem;
    font-weight: 700;
    line-height: 1.2;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  }

  .category-card-meta {
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.85rem;
    margin-top: 0.25rem;
    font-weight: 500;
  }
</style>
